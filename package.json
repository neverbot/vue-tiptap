{
  "name": "vue-tiptap",
  "version": "3.2.0",
  "description": "Vue component to use TipTap Editor without being renderless",
  "keywords": [
    "vue",
    "tiptap",
    "vuejs"
  ],
  "bugs": {
    "url": "https://github.com/neverbot/vue-tiptap/issues"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/neverbot/vue-tiptap"
  },
  "license": "MIT",
  "author": "neverbot <ivan@neverbot.com> (http://neverbot.com)",
  "exports": {
    ".": {
      "import": "./dist/vue-tiptap.js",
      "require": "./dist/vue-tiptap.umd.cjs"
    }
  },
  "main": "./dist/vue-tiptap.umd.cjs",
  "module": "./dist/vue-tiptap.js",
  "scripts": {
    "build": "npx vite build --mode production",
    "dev": "npx vite build --mode development && npx vite preview --outDir dist-example --port 5173",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "serve": "npm run dev",
    "test": "echo \"Error: no tests\" && exit 1"
  },
  "dependencies": {
    "@tiptap/core": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@tiptap/vue-3": "^3.15.3",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@eslint/js": "^9.39.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "babel-loader": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "jsonc-eslint-parser": "^2.4.2",
    "prettier": "^3.7.4",
    "sass": "^1.97.2",
    "vite": "^7.3.1",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": "^14 || ^16 || ^18 || ^20 || ^22",
    "npm": "^7 || ^8 || ^9 || ^10"
  }
}
